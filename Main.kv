#:kivy 1.0

ScreenManager:
    FrontPage:
    SettingsPage:
    CameraPage:
    ManualPage:

<FrontPage>:
    name: 'front_page'
    BoxLayout:
        #size: root.width - 200, root.height - 200
        #pos: 100, 100 
        orientation: 'vertical'

        Label:
            text: 'Welcome to Block Lens'
            font_size: 50
        RoundedButton:
            text: 'Go to settings page'
            on_press: app.root.current = 'settings_page'
            #shrinks the button
            pos_hint: {'center_x': 0.5}
            size_hint: (1, .3)
            
        RoundedButton:
            text: 'Go to camera page'
            on_press: app.root.current = 'camera_page'
            #shrinks the button
            pos_hint: {'center_x': 0.5}
            size_hint: (1, .3)
        RoundedButton:
            text: 'Go to manual page'
            on_press: app.root.current = 'manual_page'
            #shrinks the button
            pos_hint: {'center_x': 0.5}
            size_hint: (1, .3)

<SettingsPage>:
    name: 'settings_page'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Welcome to the settings page'
            font_size: 20
        Button:
            text: 'Go to front page'
            on_press: app.root.current = 'front_page'

<CameraPage>:
    name: 'camera_page'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Welcome to the camera page'
            font_size: 20
        Button:
            text: 'Go to front page'
            on_press: app.root.current = 'front_page'

<ManualPage>:
    name: 'manual_page'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Welcome to the manual page'
            font_size: 20
        Button:
            text: 'Go to front page'
            on_press: app.root.current = 'front_page'


<RoundedButton@Button>
    background_color: (0,0,0,0)
    background_normal: ''
    canvas.before:
        Color:
            rgba: (0/255, 82/255, 163/255, 1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [500]

